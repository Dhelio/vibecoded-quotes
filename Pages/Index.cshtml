@page
@model IndexModel
@{
    ViewData["Title"] = "Quotes";
}

<div class="container">
    <header class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">Quotes</h1>
        @if (User.Identity.IsAuthenticated)
        {
            <a asp-page="Create" class="btn btn-primary">Add Quote</a>
        }
    </header>

    <form class="mb-4">
        <div class="input-group">
            <input type="text" asp-for="SearchString" class="form-control" placeholder="Search by text or author..." />
            <button class="btn btn-outline-secondary" type="submit">Search</button>
        </div>
    </form>

    @if (Model.Quotes != null && Model.Quotes.Any())
    {
        <div class="row">
            @foreach (var item in Model.Quotes)
            {
                <div class="col-md-6 mb-3">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <blockquote class="blockquote mb-0">
                                <p>@item.Text</p>
                                <footer class="blockquote-footer">
                                    @item.Author
                                    @if (!string.IsNullOrEmpty(item.Source))
                                    {
                                        <cite title="Source">, @item.Source</cite>
                                    }
                                </footer>
                            </blockquote>
                            @if (!string.IsNullOrEmpty(item.Tags))
                            {
                                <div class="mt-2">
                                    @foreach (var tag in item.Tags.Split(',', StringSplitOptions.RemoveEmptyEntries))
                                    {
                                        <span class="badge badge-tag">@tag.Trim()</span>
                                    }
                                </div>
                            }
                        </div>
                        <div class="card-footer d-flex justify-content-between align-items-center text-muted small">
                            <span>@item.CreatedAt.ToLocalTime().ToString("g")</span>
                            <div>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary me-1" title="Edit">✏️</a>
                                }
                                <button class="btn btn-sm btn-outline-secondary copy-btn" 
                                        data-quote="@item.Text" 
                                        data-author="@item.Author" 
                                        data-source="@item.Source"
                                        title="Copy to Clipboard">
                                    📋 Copy
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            No quotes found. Be the first to add one!
        </div>
    }
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.copy-btn').forEach(btn => {
            btn.addEventListener('click', async () => {
                const quote = btn.dataset.quote;
                const author = btn.dataset.author;
                const source = btn.dataset.source;
                
                let text = `"${quote}" — ${author}`;
                if (source) {
                    text += `, ${source}`;
                }
                
                try {
                    await navigator.clipboard.writeText(text);
                    btn.textContent = '✅ Copied!';
                    setTimeout(() => { btn.textContent = '📋 Copy'; }, 2000);
                } catch (err) {
                    console.error('Failed to copy:', err);
                }
            });
        });
    </script>
}
