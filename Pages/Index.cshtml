@page
@model IndexModel
@{
    ViewData["Title"] = "Quotes";
}

<div class="container">
    <header class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">Quotes</h1>
        <a asp-page="Create" class="btn btn-primary">Add Quote</a>
    </header>

    @if (Model.Quotes != null && Model.Quotes.Any())
    {
        <div class="row">
            @foreach (var item in Model.Quotes)
            {
                <div class="col-md-6 mb-3">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <blockquote class="blockquote mb-0">
                                <p>@item.Text</p>
                                <footer class="blockquote-footer">
                                    @item.Author
                                    @if (!string.IsNullOrEmpty(item.Source))
                                    {
                                        <cite title="Source">, @item.Source</cite>
                                    }
                                </footer>
                            </blockquote>
                        </div>
                        <div class="card-footer text-muted small">
                            @item.CreatedAt.ToLocalTime().ToString("g")
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            No quotes found. Be the first to add one!
        </div>
    }
</div>
